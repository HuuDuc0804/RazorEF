@page "/admin/delete-role/{roleid}"
@model DeleteModel
@{
    ViewData["Title"] = "Xóa role";
}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model=@Model.StatusMessage></partial>
<hr>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <p>Bạn có chắc chắn muốn xóa Role: <strong>@Model.role!.Name</strong></p>
            <div class="form-group pt-2">
                <input type="submit" value="Xóa" class="btn btn-danger">
                <a asp-page="./Index" class="btn btn-primary">Danh sách các Roles</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
