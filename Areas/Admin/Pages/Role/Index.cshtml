@page "/admin/roles"
@model IndexModel
@{
    ViewData["Title"] = "Danh sách vai trò";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="mb-2">
    <a class="btn btn-secondary" asp-page="./Create">Tạo mới</a>
    <a class="btn btn-secondary" asp-page="../User/Index">Quản lý thành viên</a>
</div>

<table class="table">
    <tr>
        <th>Vai trò (Role)</th>
        <th>Tác vụ</th>
    </tr>
    @foreach (var role in Model.rolesModel!)
    {
        <tr>
            <td><strong>@role.Name</strong>
                @foreach (var claim in @role.Claims)
                {
                    <br><small><i>@claim</i></small>
                }
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-roleid="@role.Id">Sửa</a>
                <a class="btn btn-success btn-sm" asp-page="./Delete" asp-route-roleid="@role.Id">Xóa</a>
            </td>
        </tr>
    }
</table>
