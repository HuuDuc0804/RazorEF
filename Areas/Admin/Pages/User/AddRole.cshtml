@page "/admin/assign-member-role/{id}"
@model Admin.User.AddRoleModel
@{
    ViewData["Title"] = "Phân quyền thành viên";
}

<h3>Phân quyền cho thành viên: @Model.user.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-2">
                <label asp-for="RoleNames" class="form-label"></label>
                <select class="w-100" id="id-select-roles" multiple="multiple" asp-for="RoleNames"
                    asp-items="@Model.allRoles"></select>
                @* @Html.ListBoxFor(m=>m.RoleNames, @Model.allRoles, new {
                    id = "id-select-roles",
                    @class = "w-100"
                    }) *@
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-primary">Danh sách thành viên</a>
        </form>
    </div>
</div>

@section Scripts {
<script src="~/lib/multiple-select/multiple-select.min.js"></script>
<link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css">
@* 
<script src="https://unpkg.com/multiple-select@1.5.2/dist/multiple-select.min.js"></script> 
<link rel="stylesheet" href="https://unpkg.com/multiple-select@1.5.2/dist/multiple-select.min.css">
*@
<script>
    $("#id-select-roles").multipleSelect({
        selectAll: false,
        keepOpen: false,
        isOpen: false,
    });
</script>

<partial name="_ValidationScriptsPartial" />
}
