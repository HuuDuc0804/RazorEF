@page "/can-xac-thuc-email-dang-ky.html"
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Thông báo xác thực email";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Bạn cần kiểm tra hòm thư Email để xác thực tài khoản sau khi đăng ký.
        </p>
    }
    else
    {
        <p>
            Please check your email to confirm your account.
        </p>
    }
}
